{% layout "layout.liquid" %} {% block content %}
<div>
    <form action="/products" method="POST">
        <fieldset>
            <legend>Create a New Product</legend>
            <label>
                NAME:<input type="text" name="name" placeholder="enter product name" />
            </label>
            <label>
                Image:<input type="text" name="img" placeholder="enter image link" />
            </label>
            <label>
                Description:<input type="text" name="description" placeholder="enter description name" />
            </label>
            <label> Price:<input type="number" name="price" /> </label>
            <label> Quantity:<input type="number" name="qty" /> </label>
        </fieldset>
        <input type="submit" value="Create new Product" />
    </form>
</div>
{% endblock %}