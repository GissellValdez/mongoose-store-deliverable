{% layout "layout.liquid" %} {% block content %}

<div>
    <article>
        <h2>{{ product.name }}</h2>
        <img src="{{ product.img }}">
        <h3>Description: {{ product.description }}</h3>
        <h3>Price: {{ product.price }}</h3>
        <h3>Quantity: {{ product.qty }}</h3>
        <br>
        {% if product.qty > 0 %}
            <form action="/products/{{ product._id }}/buy?_method=PUT" method="POST">
                <input type="submit" value="Buy one" />
            </form>
        {% endif %}
        <a href="/products/{{ product._id }}/edit"><button>Edit</button></a>
        <form action="/products/{{ product._id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" />
        </form>
        <br>
        <a href="/products/"><button>Back to Main</button></a>
    </article>
</div>
{% endblock %}